<p id="notice"><%= notice %></p>

<h1><%= @beer_club.name %></h1>
<h3><%= @beer_club.city %></h3>

<p>
  Founded <%= @beer_club.founded %>
</p>

<h2>Members</h2>

<p>
  <% if @beer_club.users %>
    <ul>
    <% @beer_club.users.each do |user| %>
      <li><%= user.username %></li>
    <% end %>
    </ul>
  <% else %>
    no members
  <% end %>
</p>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %> |
<%= link_to 'Back', beer_clubs_path %>
