<h1>Beer Clubs</h1>

<table class="table table hover">
  <thead>
    <tr>
      <th><%= link_to 'Name', beer_clubs_path(order: 'name') %></th>
      <th><%= link_to 'Founded', beer_clubs_path(order: 'founded') %></th>
      <th><%= link_to 'City', beer_clubs_path(order: 'city') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to('Edit', edit_beer_club_path(beer_club), class: 'btn btn-primary') if current_user %></td>
        <td><%= link_to('Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger') if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer Club', new_beer_club_path, class: 'btn btn-primary') %>
