<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
<% if @beer.ratings.empty? %>
  beer hasn't been rated yet
<% else %>
  Has <%= pluralize(@beer.ratings.count, 'rating') %>, average <b><%= @beer.average_rating.round %></b>
<% end %>

<% if current_user %>
  <h4>Give rating</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit %>
  <% end %> 
  
  <%= link_to 'Edit', edit_beer_path(@beer) if current_user %> |
  <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', beers_path %>
