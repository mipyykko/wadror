

<h1>Users</h1>

<table class="table table hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to(user.username, user) %></td>
        <td>
          <% if current_user.admin %>
            <% if user.disabled %>
              <span class="badge badge-info">disabled</span>
            <% end %>             
          <% end %>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New User', new_user_path, class: 'btn btn-primary') %>
