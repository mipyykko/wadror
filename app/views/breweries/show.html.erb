

<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="badge badge-info">retired</span>
  <% end %>
</h2>

<p><i>Established in <%= @brewery.year %></i></p>

<p>
  <strong>Number of beers:</strong>
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
    Has no ratings
  <% else %>
    Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating.round %>
  <% end %>
</p>

<% if current_user %>
  <%= link_to 'Edit', edit_brewery_path(@brewery), class: "btn btn-primary" if current_user %> |

<% end %>

<%= link_to 'Back', breweries_path %>
